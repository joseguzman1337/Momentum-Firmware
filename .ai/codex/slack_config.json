{
  "slack_app": {
    "name": "Codex for Momentum Firmware",
    "description": "AI-powered code assistance for Flipper Zero firmware development",
    "scopes": [
      "app_mentions:read",
      "channels:history",
      "chat:write",
      "im:history",
      "mpim:history"
    ],
    "event_subscriptions": {
      "bot_events": [
        "app_mention",
        "message.channels",
        "message.groups",
        "message.im",
        "message.mpim"
      ]
    },
    "oauth_config": {
      "redirect_urls": [
        "https://chatgpt.com/codex/slack/oauth"
      ]
    }
  },
  "environment_mapping": {
    "momentum-firmware": {
      "repository": "joseguzman1337/Momentum-Firmware",
      "default_branch": "dev",
      "keywords": [
        "firmware",
        "flipper",
        "momentum",
        "embedded",
        "c",
        "hardware"
      ],
      "file_patterns": [
        "*.c",
        "*.h",
        "*.py",
        "*.md",
        "fbt",
        "SConstruct"
      ]
    }
  },
  "auto_response": {
    "acknowledgment": "üëÄ",
    "completion_message": "Task completed! Check the link above for details.",
    "error_message": "‚ùå Unable to process request. Please check your Codex setup."
  }
}