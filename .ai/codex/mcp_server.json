{
  "mcpServers": {
    "codex-agent": {
      "command": "python",
      "args": [".ai/codex/agent.py"],
      "env": {
        "LOG_DIR": "logs/codex",
        "AUTO_MERGE": "true",
        "YOLO_MODE": "true",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    }
  },
  "agentConfig": {
    "name": "Codex Agent",
    "description": "Automated issue resolution and feature implementation",
    "status": "YOLO Mode - Auto-running 24/7 with instant PR submission",
    "capabilities": [
      "Feature requests auto-assignment and auto-merge",
      "Code generation and refactoring",
      "AI-to-AI coordination via MCP server",
      "Zero-touch issue resolution pipeline"
    ],
    "workflow": [
      "Continuously monitors GitHub issues",
      "Auto-assigns and implements fixes instantly", 
      "Auto-submits PRs with 'Closes #N' and merges",
      "AI-to-AI coordination via .ai/codex/ MCP server"
    ]
  }
}