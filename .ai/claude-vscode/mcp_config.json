{
  "mcpServers": {
    "claude-vscode-bridge": {
      "command": "python",
      "args": [".ai/claude-vscode/mcp_bridge.py"],
      "env": {
        "WORKSPACE_ROOT": "/Users/x/x/Momentum-Firmware",
        "LOG_DIR": "logs/claude-vscode",
        "YOLO_MODE": "true"
      }
    },
    "momentum-codex": {
      "command": "python",
      "args": [".ai/codex/agent.py"],
      "env": {
        "COORDINATION_MODE": "true",
        "PRIMARY_AGENT": "claude-vscode"
      }
    },
    "flipper-tools": {
      "command": "python",
      "args": [".ai/tools/flipper_mcp.py"],
      "env": {
        "FBT_PATH": "./fbt",
        "TARGET": "f7"
      }
    },
    "firmware-analyzer": {
      "command": "python",
      "args": [".ai/tools/firmware_analyzer.py"],
      "env": {
        "ANALYSIS_MODE": "realtime"
      }
    }
  }
}