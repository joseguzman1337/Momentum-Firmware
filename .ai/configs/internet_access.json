{
  "version": "1.0.0",
  "internet_access": {
    "enabled": true,
    "mode": "restricted",
    "security_level": "high"
  },
  "domain_allowlist": {
    "preset": "common_dependencies",
    "additional_domains": [
      "github.com",
      "githubusercontent.com",
      "api.github.com",
      "raw.githubusercontent.com",
      "docs.github.com",
      "gitlab.com",
      "bitbucket.org",
      "stackoverflow.com",
      "developer.mozilla.org",
      "docs.python.org",
      "pypi.org",
      "pypi.python.org",
      "pythonhosted.org",
      "npmjs.com",
      "npmjs.org",
      "nodejs.org",
      "yarnpkg.com",
      "maven.org",
      "gradle.org",
      "docker.com",
      "docker.io",
      "gcr.io",
      "ghcr.io",
      "quay.io",
      "aws.amazon.com",
      "docs.aws.amazon.com",
      "console.aws.amazon.com",
      "calculator.aws",
      "flipperzero.one",
      "momentum-fw.dev",
      "discord.gg",
      "ko-fi.com",
      "paypal.me"
    ],
    "blocked_domains": [
      "malware-site.com",
      "phishing-site.com",
      "suspicious-domain.net"
    ]
  },
  "http_methods": {
    "allowed": ["GET", "HEAD", "OPTIONS"],
    "blocked": ["POST", "PUT", "PATCH", "DELETE", "TRACE", "CONNECT"]
  },
  "agent_specific_config": {
    "codex": {
      "internet_access": true,
      "additional_domains": [
        "openai.com",
        "api.openai.com",
        "platform.openai.com"
      ],
      "risk_level": "medium"
    },
    "claude": {
      "internet_access": true,
      "additional_domains": [
        "anthropic.com",
        "api.anthropic.com",
        "console.anthropic.com"
      ],
      "risk_level": "low"
    },
    "gemini": {
      "internet_access": true,
      "additional_domains": [
        "google.com",
        "googleapis.com",
        "cloud.google.com",
        "console.cloud.google.com"
      ],
      "risk_level": "low"
    },
    "jules": {
      "internet_access": true,
      "additional_domains": [
        "google.com",
        "googleapis.com"
      ],
      "risk_level": "medium"
    },
    "amazonq": {
      "internet_access": true,
      "additional_domains": [
        "aws.amazon.com",
        "console.aws.amazon.com",
        "docs.aws.amazon.com",
        "calculator.aws"
      ],
      "risk_level": "low"
    },
    "warp": {
      "internet_access": true,
      "additional_domains": [
        "warp.dev",
        "api.warp.dev"
      ],
      "risk_level": "medium"
    },
    "kiro": {
      "internet_access": true,
      "additional_domains": [
        "kiro.dev",
        "api.kiro.dev"
      ],
      "risk_level": "medium"
    },
    "deepseek": {
      "internet_access": true,
      "additional_domains": [
        "deepseek.com",
        "api.deepseek.com"
      ],
      "risk_level": "medium"
    }
  },
  "security_policies": {
    "prompt_injection_protection": true,
    "content_filtering": true,
    "request_logging": true,
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "requests_per_hour": 1000
    },
    "ssl_verification": true,
    "timeout_seconds": 30,
    "max_response_size_mb": 10
  },
  "monitoring": {
    "log_all_requests": true,
    "alert_on_blocked_requests": true,
    "security_scan_responses": true,
    "log_file": "logs/internet_access.log"
  }
}