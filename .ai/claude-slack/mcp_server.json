{
  "mcpServers": {
    "claude-slack-agent": {
      "command": "python",
      "args": [".ai/claude-slack/agent.py"],
      "env": {
        "LOG_DIR": "logs/claude-slack",
        "AUTO_MERGE": "true",
        "YOLO_MODE": "true",
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "CLAUDE_API_KEY": "${CLAUDE_API_KEY}"
      }
    }
  }
}