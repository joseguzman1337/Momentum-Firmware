// Build configuration for RTL8814AU Driver
// Workarounds for macOS 26.2 SDK cyclic dependency issue

// Swift compiler flags to avoid SDK module issues
OTHER_SWIFT_FLAGS = $(inherited) -Xfrontend -disable-implicit-concurrency-module-import -Xfrontend -disable-implicit-string-processing-module-import

// C/C++ compiler flags
OTHER_CFLAGS = $(inherited) -fno-modules
OTHER_CPLUSPLUSFLAGS = $(inherited) -fno-modules

// Deployment target
MACOSX_DEPLOYMENT_TARGET = 13.0

// SDK settings
SDKROOT = macosx

// Code signing
CODE_SIGN_IDENTITY = -
CODE_SIGN_STYLE = Automatic

// DriverKit specific settings
DRIVERKIT_DEPLOYMENT_TARGET = 22.0

// Search paths
FRAMEWORK_SEARCH_PATHS = $(inherited) $(SYSTEM_LIBRARY_DIR)/Frameworks $(SYSTEM_LIBRARY_DIR)/PrivateFrameworks

// Module settings - explicitly disable automatic module imports
CLANG_ENABLE_MODULES = NO
SWIFT_DISABLE_REQUIRED_ARCLITE = YES
