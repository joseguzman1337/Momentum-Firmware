Import("env")

env.Append(
    CPPPATH=[
        "#/lib/containers",
    ],
    LINT_SOURCES=[
        Dir("."),
    ],
    SDK_HEADERS=[
        File("bit_buffer.h"),
        File("buffer_stream.h"),
        File("m_cstr_dup.h"),
        # pipe.h and simple_array.h are provided by the upstream toolbox library.
    ],
)

libenv = env.Clone(FW_LIB_NAME="containers")
libenv.ApplyLibFlags()

# Exclude simple_array.c and pipe.c here to avoid duplicate implementations;
# the upstream toolbox library provides the canonical implementations.
sources = [
    src
    for src in libenv.GlobRecursive("*.c")
    if src.name not in ("simple_array.c", "pipe.c")
]

lib = libenv.StaticLibrary("${FW_LIB_NAME}", sources)
libenv.Install("${LIB_DIST_DIR}", lib)
Return("lib")
